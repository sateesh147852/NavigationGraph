<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.navigationgraph.ui.HomeFragment"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/chatFragment"
        android:name="com.navigationgraph.ui.ChatFragment"
        tools:layout="@layout/fragment_chat" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.navigationgraph.ui.SettingsFragment"
        tools:layout="@layout/fragment_settings">

        <action
            android:id="@+id/settings_to_account_edit_fragment"
            app:destination="@id/editAccountFragment" />

    </fragment>

    <fragment
        android:id="@+id/editAccountFragment"
        android:name="com.navigationgraph.ui.EditAccountFragment"
        tools:layout="@layout/fragment_edit_account" />

    <fragment
        android:id="@+id/menuFragment"
        android:name="com.navigationgraph.ui.MenuFragment"
        tools:layout="@layout/fragment_menu">

    <action
        android:id="@+id/menuFragment_to_editAccountFragment"
        app:destination="@id/editAccountFragment" />

    </fragment>


</navigation>